pod 'Firebase/Storage'
pod 'Firebase/Crashlytics'

# Facebook
pod 'FBSDKLoginKit'

# Google
pod 'GoogleSignIn'

# UI Dependencies
pod 'MessageKit'
pod 'JGProgressHUD'
pod 'RealmSwift'
pod 'SDWebImage'

end
